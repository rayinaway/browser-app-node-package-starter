	"author": "__PLACEHOLDER__",
	"license": "UNLICENSED",
	"private": true,
	"dependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@vanilla-extract/css": "^1.14.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.24.4",
		"@babel/preset-typescript": "^7.24.1",
		"@commitlint/cli": "^19.2.2",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^15.0.2",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^20.12.7",
		"@types/react": "^18.2.79",
		"@types/react-dom": "^18.2.25",
		"@typescript-eslint/eslint-plugin": "^7.7.0",
		"@typescript-eslint/parser": "^7.7.0",
		"@vanilla-extract/jest-transform": "^1.1.4",
		"@vanilla-extract/parcel-transformer": "^1.0.4",
		"babel-plugin-module-resolver": "^5.0.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^9.0.11",
		"is-ci": "^3.0.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jest-extended": "^4.0.2",
		"lint-staged": "^15.2.2",
		"parcel": "^2.12.0",
		"pinst": "^3.0.0",
		"prettier": "^3.2.5",
		"process": "^0.11.10",
		"typescript": "^5.4.5"
	},
	"scripts": {
		"build": "npm run typecheck && node ./scripts/prebuild.js && parcel build --no-autoinstall --public-url \".\" --no-source-maps && node ./scripts/postbuild.js",
		"develop": "node ./scripts/prebuild.js && parcel serve --target default --no-autoinstall --lazy --dist-dir \"./build\" --https",
		"lint": "eslint \"./src/**/*.{ts,tsx}\"",
		"postinstall": "is-ci || husky",
		"postpublish": "pinst --enable",
		"prepublishOnly": "pinst --disable",
		"test": "jest --coverage",
		"test-watch": "jest --watch",
		"typecheck": "tsc"
	},
	"source": "./src/index.html",
	"targets": {
		"default": {
			"distDir": "./build"
		},
		"server": {
			"source": "./src/server.ts",
			"isLibrary": true,
			"context": "node",
			"outputFormat": "commonjs",
			"distDir": "./build/server"
		}
	}
}
