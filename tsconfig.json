{
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"target": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "preserve",
		"jsx": "preserve",
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		}
	}
}
